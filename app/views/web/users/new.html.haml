= title t '.title'
- model_class = User
.page-header
  %h1=t '.title'
.form
  = simple_form_for @user, url: { controller: 'web/users', action: :create }, html: { class: 'form-horizontal' } do |f|
    - f.with_options input_html: { class: "col-lg-9" }, label_html: { class: "col-lg-3 control-label" } do |f|
      %fieldset
        .form-group
          = f.input :email, as: :string
        .form-group
          = f.input :password, as: :string
        .form-group
          = f.input :password_confirmation, as: :string
        .form-group
          = f.input :first_name, as: :string
        .form-group
          = f.input :middle_name, as: :string
        .form-group
          = f.input :last_name, as: :string
        .form-group
          = f.label :avatar
        - if @user.avatar.present?
          = image_tag @user.avatar.thumb
        = f.file_field :avatar
        .form-actions
          = f.button :submit, class: 'btn-primary'
          = link_to t('.cancel', default: t("helpers.links.cancel")), admin_users_path, class: 'btn'
