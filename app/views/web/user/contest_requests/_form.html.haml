.form
  = simple_form_for @contest_request, url: { controller: 'web/user/contest_requests', action: action }, html: { class: 'form-horizontal' } do |f|
    - f.with_options input_html: { class: "col-lg-9" }, label_html: { class: "col-lg-3 control-label" }, error_html: { class: "help-block" } do |f|
      %fieldset
        .form-group
          = f.input :annotation
        .form-group
          = f.input :audience
        .form-group
          = f.input :estimates
        .form-group
          = f.input :goal
        .form-group
          = f.input :multiplicativity
        .form-group
          = f.input :plan
        .form-group
          = f.input :problem
        .form-group
          = f.input :real_methods
        .form-group
          = f.input :results
        .form-group
          = f.input :tasks
        .form-group
          = f.input :user_id, as: :hidden, input_html: { value: current_user.id }
        .form-group
          = f.button :submit, class: 'btn btn-primary'
          = link_to t('.cancel', default: t("helpers.links.cancel")), contest_requests_path, class: 'btn'
