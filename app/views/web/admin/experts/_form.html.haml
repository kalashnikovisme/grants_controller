= simple_form_for @expert, url: { controller: 'web/admin/experts', action: action }, html: { class: 'form-horizontal' } do |f|
  - f.with_options input_html: { class: :span6 } do |f|
    = f.input :job, as: :string
    = f.input :post, as: :string
    = f.input :degree
    = f.association :user, label_method: lambda { |user| "#{user.first_name} #{user.middle_name} #{user.last_name} | #{user.id}" }, value_method: :id
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_experts_path, class: 'btn'
