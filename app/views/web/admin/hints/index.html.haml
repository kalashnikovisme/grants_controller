- model_class = Hint
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
= link_to t('.new', default: t("helpers.links.new")), new_admin_hint_path, class: 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:subject)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @hints.each do |hint|
      %tr
        %td= link_to hint.id, edit_admin_hint_path(hint)
        %td= hint.subject
        %td= hint.body
        %td=l hint.created_at
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_hint_path(hint), class: 'btn btn-mini'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_hint_path(hint), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_hint_path, class: 'btn btn-primary'
