= simple_form_for @hint, url: { controller: "web/admin/hints", action: action }, html: { class: 'form-horizontal' } do |f|
  - f.with_options input_html: { class: :span6 } do |f|
    = f.input :subject, as: :string, placeholder: t('placeholders.admin.hint.subject')
    = f.input :body, as: :string, placeholder: t('placeholders.admin.hint.body')
    .form-actions
      = f.button :submit, class: 'btn btn-primary'
      = link_to t('.cancel', default: t("helpers.links.cancel")), admin_hints_path, class: 'btn'
