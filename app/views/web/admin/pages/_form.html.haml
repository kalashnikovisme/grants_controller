.form
  = simple_form_for @page, url: { controller: "web/admin/pages", action: action }, html: { class: 'form-horizontal' } do |f|
    - f.with_options input_html: { class: "col-lg-9" }, label_html: { class: "col-lg-3 control-label" }, error_html: { class: "help-block" } do |f|
      %fieldset
        .form-group
          = f.input :title, as: :string, placeholder: t('placeholders.admin.page.title')
        .form-group
          = f.input :body, placeholder: t('placeholders.admin.page.body')
        .form-group
          = f.input :slug, placeholder: t('placeholders.admin.page.slug')
        .form-group
          = f.input :section, placeholder: t('placeholders.admin.page.section')
        .form-group
          = f.button :submit, class: 'btn btn-primary'
          = link_to t('.cancel', default: t("helpers.links.cancel")), admin_pages_path, class: 'btn btn-default'
