- model_class = Page
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
= link_to t('.new', default: t("helpers.links.new")), new_admin_page_path, class: 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:slug)
      %th= model_class.human_attribute_name(:section)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @pages.each do |page|
      %tr
        %td= link_to page.id, edit_admin_page_path(page)
        %td= page.title
        %td= page.lead
        %td= page.slug
        %td= page.section
        %td=l page.created_at
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_page_path(page), class: 'btn btn-warning'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_page_path(page), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_page_path, class: 'btn btn-primary'
