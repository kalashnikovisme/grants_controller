= simple_form_for @help, url: { controller: "web/admin/helps", action: action }, html: { class: 'form-horizontal' } do |f|
  - f.with_options input_html: { class: :span6 } do |f|
    = f.input :title, as: :string, placeholder: t('placeholders.admin.help.title')
    = f.input :body, placeholder: t('placeholders.admin.help.body')
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_helps_path, class: 'btn'
