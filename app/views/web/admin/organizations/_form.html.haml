.form
  = simple_form_for @organization, url: { controller: "web/admin/organizations", action: action }, html: { class: 'form-horizontal' } do |f|
    - f.with_options input_html: { class: "col-lg-9" }, label_html: { class: "col-lg-3 control-label" }, error_html: { class: "help-block" } do |f|
      %fieldset
        .form-group
          = f.input :title, as: :string, placeholder: t('placeholders.admin.organization.title')
        .form-group
          = f.input :url, as: :string, placeholder: t('placeholders.admin.organization.url')
        .form-group
          = f.input :org_type, input_html: { class: "col-lg-9 form-control" }
        .form-group
          = f.button :submit, class: 'btn btn-primary'
          = link_to t('.cancel', default: t("helpers.links.cancel")), admin_organizations_path, class: 'btn'
