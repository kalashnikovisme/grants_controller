- model_class = GrantOperator
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @grant_operators.each do |grant_operator|
      %tr
        %td= link_to grant_operator.id, edit_admin_grant_operator_path(grant_operator)
        %td= grant_operator.title
        %td= grant_operator.url
        %td=l grant_operator.created_at
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_grant_operator_path(grant_operator), class: 'btn btn-mini'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_grant_operator_path(grant_operator), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_grant_operator_path, class: 'btn btn-primary'
