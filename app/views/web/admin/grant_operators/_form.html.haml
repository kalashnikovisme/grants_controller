.form
  = simple_form_for @grant_operator, url: { controller: "web/admin/grant_operators", action: action }, html: { class: 'form-horizontal' } do |f|
    - f.with_options input_html: { class: "col-lg-9" }, label_html: { class: "col-lg-3 control-label" }, error_html: { class: "help-block" } do |f|
      %fieldset
        .form-group
          = f.input :title, as: :string, placeholder: t('placeholders.admin.grant_operator.title')
        .form-group
          = f.input :url, as: :string, placeholder: t('placeholders.admin.grant_operator.url')
        .form-group
          = f.button :submit, class: 'btn btn-primary'
          = link_to t('.cancel', default: t("helpers.links.cancel")), admin_grant_operators_path, class: 'btn'
