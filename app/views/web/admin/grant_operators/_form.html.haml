= simple_form_for @grant_operator, url: { controller: "web/admin/grant_operators", action: action }, html: { class: 'form-horizontal' } do |f|
  - f.with_options input_html: { class: :span6 } do |f|
    = f.input :title, as: :string
    = f.input :url, as: :string
    .form-actions
      = f.button :submit, class: 'btn btn-primary'
      = link_to t('.cancel', default: t("helpers.links.cancel")), admin_grant_operators_path, class: 'btn'
