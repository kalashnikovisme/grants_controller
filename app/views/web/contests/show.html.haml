= title @contest.title
%ul.nav.nav-pills
  %li
    = link_to contests_path do
      %span.glyphicon.back{ style: "margin-top: -2px" }
      = t('helpers.logic.contests')
  .nav-pills-header
    .navbar-brand
      = @contest.title
  %li.date
    %span.glyphicon.calendar{ style: "margin-top: 5px" }
    .date-text
      =l @contest.end_date, format: "%d %b %Y"
  %li.link.dropdown
    %a.dropdown-toggle{ href: "#", "data-toggle" => :dropdown }
      %span.glyphicon.link
      = t('.source')
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to t('activerecord.attributes.contest.link'), @contest.link, target: "_blank"
      %li
        = link_to t('activerecord.attributes.contest.grant_operator'), @contest.grant_operator.url, target: "_blank"
.contest_content
  %h4
    = t('activerecord.attributes.contest.description')
  = @contest.description
.grant_operator_info
  .grant_operator_info_title
    %span.glyphicon.building
    = link_to grant_operators_path do
      %h4
        = @contest.grant_operator.title
  .grant_operator_info_stat
    %span.glyphicon.list
    %h4
      = @contest.grant_operator.contests.count

