= title t("enumerize.page.section.#{params[:section]}")
- model_class = Page
.page-header
  %h1
    = t("enumerize.page.section.#{params[:section]}")
#tabs
  .col-lg-3
    %ul.nav.nav-pills.nav-stacked.pages_nav
      - @pages.each do |page|
        %li
          = link_to page.title, "##{page.slug}"
  .col-lg-9.page_body
    - @pages.each do |page|
      .page_body{ id: page.slug }
        != page.body
