.navbar.navbar-default
  .navbar-header
    %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{ href: root_path }
      = t('project_attributes.name')
  .navbar-collapse.collapse.navbar-responsive-collapse
    %ul.nav.navbar-nav
      %li.dropdown
        %a.dropdown-toggle{ href: "#", "data-toggle" => :dropdown }
          = t('.grants')
          %b.caret
        %ul.dropdown-menu
          %li
            = link_to t('helpers.logic.contests'), contests_path
          %li
            = link_to t('helpers.logic.organizations'), organizations_path
      %li.dropdown
        %a.dropdown-toggle{ href: "#", "data-toggle" => :dropdown }
          = t('.library')
          %b.caret
        %ul.dropdown-menu
          - if any_hints
            %li
              = link_to t('helpers.logic.hints'), hint_path(any_hints)
          - if any_helps
            %li
              = link_to t('helpers.logic.helps'), help_path(any_helps)
    %ul.nav.navbar-nav.navbar-right
      - if signed_in?
        %li.dropdown
          %a.dropdown-toggle{ href: "#", "data-toggle" => :dropdown }
            = t('helpers.logic.contest_requests')
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to t('.see_contest_requests'), contest_requests_path
            %li
              = link_to t('.new_contest_requests'), new_contest_request_path
        - if admin_signed_in?
          %li
            = link_to t('web.admin.panel'), admin_path
        %li
          = link_to t('helpers.sign_out'), session_path, method: :delete
      - else
        %li
          = link_to t('helpers.sign_in'), new_session_path
        %li
          = link_to t('helpers.registration'), new_user_path
