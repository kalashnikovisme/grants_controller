%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "grants_controller"
    = csrf_meta_tags
    = stylesheet_link_tag    "application", media: "all"
    = yield(:page_stylesheet) if content_for?(:page_stylesheet)
    = stylesheet_link_tag "application", media: "all"
  %body{ style: "background-color: white" }
    .navbar.navbar-default
      .container-fluid
        %ul.nav.navbar-nav.navbar-right
          %li= link_to t('helpers.logic.grant_operators'), admin_grant_operators_path
          %li= link_to t('helpers.logic.contests'), admin_contests_path
          %li= link_to t('helpers.logic.helps'), admin_helps_path
          %li= link_to t('helpers.app.admin_panel'), admin_path
          %li= link_to t('helpers.app.sign_out'), session_path, method: :delete
    .admin_container
      .content
        = yield
