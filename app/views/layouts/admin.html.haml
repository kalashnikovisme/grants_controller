%html(lang="en")
  %head
    = render 'layouts/head_tag'
  %body{ style: "background-color: white" }
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: root_path }
            = t('project_attributes.name')
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{ href: "#", "data-toggle" => "dropdown" }
              = t('.fonds')
              %b.caret
            %ul.dropdown-menu
              %li= link_to t('helpers.logic.organizations'), admin_organizations_path
              %li= link_to t('helpers.logic.contests'), admin_contests_path
          %li.dropdown
            %a.dropdown-toggle{ href: "#", "data-toggle" => "dropdown" }
              = t('.edit_help')
              %b.caret
            %ul.dropdown-menu
              %li= link_to t('helpers.logic.hints'), admin_hints_path
              %li= link_to t('helpers.logic.helps'), admin_helps_path
          %li.dropdown
            %a.dropdown-toggle{ href: "#", "data-toggle" => "dropdown" }
              = t('.people')
              %b.caret
            %ul.dropdown-menu
              %li= link_to t('helpers.logic.experts'), admin_experts_path
              %li= link_to t('helpers.logic.users'), admin_users_path
          %li= link_to t('helpers.app.admin_panel'), admin_path
          %li= link_to t('helpers.app.sign_out'), session_path, method: :delete
    .admin_container
      .content
        = yield
